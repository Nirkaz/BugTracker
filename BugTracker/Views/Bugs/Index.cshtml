@using System.Globalization;
@model IEnumerable<BugTracker.Models.Bug>

@{
    ViewData["Title"] = "Index";
}

<h1>Current issues:</h1>
<table class="table align-middle">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>Reporter</th>
            <th>Assignee</th>
            <th>
                @Html.DisplayNameFor(model => model.Severity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priotity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Created</th>
            <th>Due date</th>
            <th>Modiffied</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>@item.Reporter.UserName</td>
            <td>@item.Assignee.UserName</td>
            <td>
                @Html.DisplayFor(modelItem => item.Severity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priotity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @item.CreatedDate.ToString("dd/MMM/yyyy", CultureInfo.InvariantCulture)
            </td>
            <td>
                @item.DueDate.ToString("dd/MMM/yyyy", CultureInfo.InvariantCulture)
            </td>
            <td>
                @item.ModifiedDate.ToString("dd/MMM/yyyy", CultureInfo.InvariantCulture)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="bi bi-card-text me-2"></i>Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-square me-2"></i>Create New
    </a>
</p>
